<%= stylesheet_link_tag 'budget', plugin: 'espeo_budget' %>

<h2 class="inline"><%= t(:new_budget_entries_category) %></h2>
<%= link_to t(:go_back_to_budget_entries_categories), project_budget_entries_categories_path(@project), class: "icon icon-cancel" %>
<%= link_to t(:go_back_to_budget), project_budget_path(@project), class: "icon icon-cancel" %>


<%= labelled_form_for @category, :as => :category, :url => project_budget_entries_categories_path(@project) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= submit_tag l(:button_create) %>
<% end %>
